@model EmployeeProfileModel
@{
    Layout = "_Layout";
}
<main class="main">
    <section class="section-box-2">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="box-company-profile">
                        <div class="row">
                            <div class="col-md-12">
                                <img class="img-fluid" style="border-radius: 16px" src="@Model.EmployeeInformation.ProfilePhoto">
                            </div>
                        </div>
                        <div class="row mt-10">
                            <div class="col-md-12">
                                <h5 class="f-18">@Model.EmployeeInformation.Name @Model.EmployeeInformation.Surname</h5>
                                <p class="mt-0 font-md color-text-paragraph-2 mb-15">Tarım İşçisi</p>
                                <div data-bs-toggle="modal" data-bs-target="#ModalComments" class="mt-10 mb-15">
                                    @if (Model.EmployeeInformation.RatingCount == 0)
                                    {
                                        <span class="font-xs color-text-mutted ml-10">Değerlendirme Yok</span>
                                    }
                                    else
                                    {
                                        @for (int i = 0; i < Model.EmployeeInformation.Rating; i++)
                                        {
                                            <img src="~/assets/imgs/template/icons/star.svg">
                                        }
                                        <span class="font-xs color-text-mutted ml-10">(@Model.EmployeeInformation.RatingCount)</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="box-company-profile">
                        <div class="sidebar-border">
                            <h5 class="f-18">İletişim</h5>
                            <div class="sidebar-list-job">
                                <ul>
                                    <li>
                                        <div class="sidebar-icon-item"><i class="fi fi-rr-envelope"></i></div>
                                        <div class="sidebar-text-info"><span class="text-description">E-posta</span><strong class="small-heading">@Model.EmployeeInformation.Email</strong></div>
                                    </li>
                                </ul>
                            </div>
                            <div class="sidebar-list-job">
                                <div class="mt-30"><a class="btn btn-send-message" href="mailto:@Model.EmployeeInformation.Email">Mesaj Gönder</a></div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="border-bottom pt-10 pb-10"></div>
    </section>
    <section class="section-box mt-50">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-12 col-sm-12 col-12">
                    <h3 class="mb-30">Çalışma Deneyimleri</h3>
                    <div class="box-list-jobs display-list">
                        @foreach (var experience in Model.WorkExperiences)
                        {
                            <div class="col-xl-12 col-12">
                                <div class="card-grid-2 hover-up wow animate__animated animate__fadeIn" style="visibility: hidden; animation-name: none;">
                                    <div class="card-block-info p-4">
                                        <h4><a>@experience.Title</a></h4>
                                        <p class="font-sm color-text-paragraph mt-10">@experience.Description</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-lg-4 col-md-12 col-sm-12 col-12 pl-40 pl-lg-15 mt-lg-30">
                    <h3 class="mb-30">İlgi Alanları</h3>
                    <div class="box-skills">
                        <div class="box-tags">
                            @foreach (var tag in Model.Interests)
                            {
                                <a class="btn btn-grey-small mr-10">@tag.Name</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<div class="modal fade" id="ModalComments" tabindex="-1" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content apply-job-form">
            <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            <div class="modal-body pl-30 pr-30 pt-50">
                <div class="text-center">
                    <p class="font-sm text-brand-2">Yorumlar</p>
                    <h2 class="mt-10 mb-5 text-brand-1 text-capitalize">İşçi Yorumları</h2>
                    <p class="font-sm text-muted mb-30">Bu işçiyi işe almış işverenlerden gelen yorumlar.</p>
                </div>
                <div id="comments">
                    @foreach (var item in Model.Ratings)
                    {
                        <div>
                            @for (int i = 0; i < item.Rating; i++)
                            {
                                <img src="~/assets/imgs/template/icons/star.svg">
                            }
                        </div>
                        <div>
                            <span class="font-xs color-text-mutted">@item.Name.Substring(0, 1)*** @item.Surname.Substring(0, 1)***</span>
                        </div>
                        <div>
                            @item.Comment
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>