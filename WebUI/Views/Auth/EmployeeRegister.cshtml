@model EmployeeRegisterModel
@{
    Layout = "_Layout";
}
<main class="main">
    <section class="pt-100 login-register">
        <div class="container">
            <div class="row login-register-cover">
                <div class="col-lg-4 col-md-6 col-sm-12 mx-auto">
                    <div class="text-center">
                        <p class="font-sm text-brand-2">Kaydol </p>
                        <h2 class="mt-10 mb-5 text-brand-1">Ücretsiz Kayıt Ol!</h2>
                    </div>
                    <div class="row my-4">
                        <div class="col-md-6 text-center mt-2">
                            <a class="btn btn-primary hover-up" href="/is-arayan-kayit">İş arıyorum</a>
                        </div>
                        <div class="col-md-6 text-center mt-2">
                            <a class="btn btn-secondary hover-up" href="/isveren-kayit">İş veriyorum</a>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="box-info-contact p-4">
                            <div class="row">
                                <div class="col-md-12">
                                    @Model.Message
                                </div>
                            </div>
                        </div>
                    }
                    <form class="login-register text-start mt-20" method="post">
                        <div class="form-group">
                            <label class="form-label" for="input-1">İsim *</label>
                            <input class="form-control" id="input-1" type="text" asp-for="@Model.EmployeeForRegister.Name" placeholder="İsim "
                                   data-val="true" data-val-required="İsim gerekli.">
                            <div class="error-message" data-valmsg-for="EmployeeForRegister.Name" data-valmsg-replace="true"></div>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="input-2"> Soyisim *</label>
                            <input class="form-control" id="input-2" type="text" asp-for="@Model.EmployeeForRegister.Surname" placeholder=" Soyisim"
                                   data-val="true" data-val-required="Soyisim gerekli.">
                            <div class="error-message" data-valmsg-for="EmployeeForRegister.Surname" data-valmsg-replace="true"></div>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="input-3">Telefon *</label>
                            <input class="form-control" id="input-3" type="text" asp-for="@Model.EmployeeForRegister.Phone" placeholder="Telefon No"
                                   data-val="true" data-val-required="Telefon gerekli.">
                            <div class="error-message" data-valmsg-for="EmployeeForRegister.Phone" data-valmsg-replace="true"></div>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="input-4">E-posta *</label>
                            <input class="form-control" id="input-4" type="email" asp-for="@Model.EmployeeForRegister.Email" placeholder="example@example.com"
                                   data-val="true" data-val-required="E-posta gerekli.">
                            <div class="error-message" data-valmsg-for="EmployeeForRegister.Email" data-valmsg-replace="true"></div>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="input-5">Şifre *</label>
                            <input class="form-control" id="input-5" type="password" asp-for="@Model.EmployeeForRegister.Password" placeholder="************"
                                   data-val="true" data-val-required="Şifre gerekli.">
                            <div class="error-message" data-valmsg-for="EmployeeForRegister.Password" data-valmsg-replace="true"></div>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="input-6"> Şifre Tekrar *</label>
                            <input class="form-control" id="input-6" type="password" asp-for="@Model.EmployeeForRegister.RePassword" placeholder="************"
                                   data-val="true" data-val-required="Şifre gerekli.">
                            <div class="error-message" data-valmsg-for="EmployeeForRegister.RePassword" data-valmsg-replace="true"></div>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="input-7">TC *</label>
                            <input class="form-control" id="input-7" type="text" asp-for="@Model.EmployeeForRegister.Tckn" placeholder="TC Kimlik No"
                                   data-val="true" data-val-required="TC gerekli.">
                            <div class="error-message" data-valmsg-for="EmployeeForRegister.Tckn" data-valmsg-replace="true"></div>
                        </div>
                        <div class="login_footer form-group d-flex justify-content-between">
                            <div>
                                <label class="cb-container">
                                    <input type="checkbox" name="approval" data-val="true"
                                           data-val-equalto="Onayınız gerekli."
                                           data-val-equalto-other="approval">
                                    <span class="text-small">Kişisel verilerimin saklanması ve işlenmesini onaylıyorum</span>
                                    <span class="checkmark"></span>
                                </label>
                                <div class="error-message" data-valmsg-for="approval" data-valmsg-replace="true"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-brand-1 hover-up w-100" type="submit" name="login">Kaydol</button>
                        </div>
                        <div class="text-muted text-center">Zaten bir hesabın mı var? <a href="~/giris-yap">Giriş Yap</a></div>
                    </form>
                </div>
                <div class="img-1 d-none d-lg-block"><img class="shape-1" src="~/Assets/imgs/page/login-register/img-1.svg"></div>
                <div class="img-2"><img src="~/Assets/imgs/page/login-register/img-2.svg"></div>
            </div>
        </div>
    </section>
</main>