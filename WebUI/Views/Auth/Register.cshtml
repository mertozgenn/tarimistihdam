@{
    Layout = "_Layout";
}
<main class="main">
    <section class="pt-100 login-register">
        <div class="container">
            <div class="row login-register-cover">
                <div class="col-lg-4 col-md-6 col-sm-12 mx-auto">
                    <div class="text-center">
                        <p class="font-sm text-brand-2">Kaydol </p>
                        <h2 class="mt-10 mb-5 text-brand-1">Ücretsiz Kayıt Ol!</h2>
                    </div>
                    <form class="login-register text-start mt-20" action="#">
                        <div class="form-group">
                            <label class="form-label" for="input-1">İsim *</label>
                            <input class="form-control" id="input-1" type="text" required="" name="name" placeholder="İsim ">
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="input-1"> Soyisim *</label>
                            <input class="form-control" id="input-1" type="text" required="" name="surname" placeholder=" Soyisim">
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="input-1">Telefon *</label>
                            <input class="form-control" id="input-1" type="text" required="" name="phone" placeholder="Telefon No">
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="input-2">E-posta *</label>
                            <input class="form-control" id="input-2" type="email" required="" name="emailaddress" placeholder="example@example.com">
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="input-4">Şifre *</label>
                            <input class="form-control" id="input-4" type="password" required="" name="password" placeholder="************">
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="input-5"> Şifre Tekrar *</label>
                            <input class="form-control" id="input-5" type="password" required="" name="re-password" placeholder="************">
                        </div>
                        <div class="login_footer form-group d-flex justify-content-between">
                            <label class="cb-container">
                                <input type="checkbox"><span class="text-small">Kişisel verilerimin saklanması ve işlenmesini onaylıyorum</span><span class="checkmark"></span>
                            </label>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-brand-1 hover-up w-100" type="submit" name="login">Kaydol</button>
                        </div>
                        <div class="text-muted text-center">Zaten bir hesabın mı var? <a href="~/giris-yap">Giriş Yap</a></div>
                    </form>
                </div>
                <div class="img-1 d-none d-lg-block"><img class="shape-1" src="~/Assets/imgs/page/login-register/img-1.svg" alt="JobBox"></div>
                <div class="img-2"><img src="~/Assets/imgs/page/login-register/img-2.svg" alt="JobBox"></div>
            </div>
        </div>
    </section>
</main>