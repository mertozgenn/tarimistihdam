@{
    Layout = "_Layout";
}
<main class="main">
    <div class="container">
        <div class="box-content">
            <div class="box-heading" style="padding-left:15px">
                <div class="box-title" style="padding-left:10px;">
                    <h3 class="mb-35">İş İlanı Oluştur</h3>
                </div>
                <div class="box-breadcrumb">
                    <div class="breadcrumbs">
                        <ul>
                            <li> <a class="icon-home" href="~/is-ilanlarim">İş İlanlarım</a></li>
                            <li><span>İlan Oluştur</span></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-box">
                        <div class="container">
                            <div class="panel-white mb-30">
                                <div class="box-padding bg-postjob">
                                    <div class="row mt-30">
                                        <div class="col-lg-12">
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="form-group mb-30">
                                                        <label class="font-sm color-text-mutted mb-10">İş İlanı Başlığı * </label>
                                                        <input class="form-control" type="text" placeholder="iş ilanı başlığı">
                                                    </div>
                                                </div>
                                                <div class="col-lg-3">
                                                    <div class="form-group mb-30">
                                                        <label class="font-sm color-text-mutted mb-10">Yevmiye * </label>
                                                        <input class="form-control" type="text" placeholder="">
                                                    </div>
                                                </div>
                                                <div class="col-lg-3">
                                                    <div class="form-group mb-30">
                                                        <label class="font-sm color-text-mutted mb-10">İşçi Sayısı * </label>
                                                        <input class="form-control" type="text" placeholder="">
                                                    </div>
                                                </div>
                                                <div class="col-lg-4 col-md-4">
                                                    <div class="form-group mb-30">
                                                        <label class="font-sm color-text-mutted mb-10">İş Kategorisi *</label>
                                                        <select class="form-control">
                                                            <option value="1">Üzüm Toplama</option>
                                                            <option value="1">Tarla Sürme</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-lg-4 col-md-4">
                                                    <div class="form-group mb-30">
                                                        <label class="font-sm color-text-mutted mb-10">İl *</label>
                                                        <select class="form-control">
                                                            <option value="1">Manisa</option>
                                                            <option value="1">İzmir</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-lg-4 col-md-4">
                                                    <div class="form-group mb-30">
                                                        <label class="font-sm color-text-mutted mb-10">İlçe *</label>
                                                        <select class="form-control">
                                                            <option value="1">Yunusemre</option>
                                                            <option value="1">Şehzadeler</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-lg-9">
                                                    <div class="form-group mb-30">
                                                        <label class="font-sm color-text-mutted mb-10">Açıklama *</label>
                                                        <textarea class="form-control" name="message" rows="8"> </textarea>
                                                    </div>
                                                </div>


                                                <div class="col-lg-3">

                                                </div>

                                                <div class="col-lg-3 col-md-3">
                                                    <div class="form-group mb-30">
                                                        <div class="box-upload">
                                                            <div class="add-file-upload">
                                                                <input class="fileupload" type="file" name="file">
                                                            </div><a class="btn btn-default">Resim Yükle</a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-3 col-md-3">
                                                    <div class="form-group mb-30 box-file-uploaded d-flex align-items-center"><span>bırakoli.jpg</span><a class="btn btn-delete">Sil</a></div>
                                                </div>
                                                <div class="col-lg-12">
                                                    <div class="form-group mt-10">
                                                        <button class="btn btn-default btn-brand icon-tick">İlanı Yayınla</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>  
        </div>
    </div>

</main>