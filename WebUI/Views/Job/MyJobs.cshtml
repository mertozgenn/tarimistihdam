@model MyJobsModel
@{
    Layout = "_Layout";
}
<main class="main my-jobs">
    <section class="section-box-2">
        <div class="container">
            <div class="banner-hero banner-single banner-single-bg">
                <div class="block-banner text-center">
                    <h3 style="padding-bottom:2rem;" class="wow animate__animated animate__fadeInUp"> İş İlanlarım</h3>
                    <a href="~/ilan-formu" class="btn btn-default btn-find font-sm">İlan Ekle</a>
                </div>
            </div>
        </div>
    </section>
    <section class="section-box mt-30">
        <div class="container">
            <div class="row flex-row-reverse">
                <div class="col-lg-12 col-md-12 col-sm-12 col-12 float-right">
                    <div class="content-page">
                        <div class="row">
                            @foreach (var item in Model.Jobs)
                            {
                                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-12">
                                    <div class="card-grid-2 hover-up">
                                        <div class="card-grid-2-image-left">
                                            <span class="flash"></span>
                                            <div class="image-box cstm-img"><img src="@item.Image" alt=""></div>
                                            <div>
                                                <div class="right-info"><span class="location-small"> @item.City, @item.District</span></div>
                                                <div class="right-info">
                                                    @if (item.Status == "Kapatıldı")
                                                    {
                                                        <span class="badge bg-danger">@item.Status</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-primary">@item.Status</span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-block-info">
                                            <h6><a href="/is-ilani-detay/@item.Id">@item.Title</a></h6>
                                            <div class="mt-5"><span class="card-briefcase">@item.EmployeeCount Kişi</span><span class="card-time">@item.PublishDate.ToString("dd.MM.yyyy")</span></div>
                                            <p class="font-sm color-text-paragraph mt-15">@item.Description</p>
                                            <div class="mt-30 tags">
                                                @if (item.Tags != null)
                                                {
                                                    @foreach (var tag in item.Tags)
                                                    {
                                                        @if (tag != null)
                                                        {
                                                            <a class="btn btn-grey-small mr-5">@tag.DisplayName</a>
                                                        }
                                                    }
                                                }
                                            </div>
                                            <div class="card-2-bottom mt-30">
                                                <div class="row">
                                                    <div class="col-lg-6 col-6"><span class="card-text-price">₺@item.DailyWage.ToString("N2")</span><span class="text-muted">/Günlük</span></div>
                                                    <div class="col-lg-3 col-3 text-end">
                                                        <a class="btn btn-apply-now" href="ilan-formu/@item.Id">Güncelle</a>
                                                    </div>
                                                    <div class="col-lg-3 col-3 ">
                                                        <a class="btn btn-apply-now" style="background-color:darkgrey; color:white;" href="/is-ilanlarim/basvurular/@item.Id">Başvurular</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>